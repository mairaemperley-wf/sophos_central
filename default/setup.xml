<setup>
<block title="Add new credentials" endpoint="storage/passwords" entity="_new">
  <text>Enter your Sophos Central API Credentials (see http://github.com/nickhills81/ for more information)</text>

  <input field="realm">
    <label>API Access URL</label>
    <type>text</type>
  </input>

  <input field="name">
    <label>x-api-key</label>
    <type>text</type>
  </input>

  <input field="password">
    <label>Authorisation String</label>
    <type>text</type>
  </input>
  <text>&lt;i&gt;Include the string of characters &lt;strong&gt;after&lt;/strong&gt; Authorisation:Basic &lt;/i&gt;</text>
</block>

</setup>
